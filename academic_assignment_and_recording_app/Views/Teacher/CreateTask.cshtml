@{
    ViewData["Title"] = "Teacher";
}

<body style="background-image: url('https://images.pexels.com/photos/29586677/pexels-photo-29586677/free-photo-of-elegant-flow-of-soft-blue-fabric-in-abstract-form.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2'); background-attachment: fixed; background-size: cover;">

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand disabled" style="cursor: default; color: black;"><strong>Ηλεκτρονική Τάξη</strong></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link mx-3" asp-controller="Teacher" asp-action="Index">
                            Μενού Μαθημάτων Καθηγητή
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mx-3" asp-controller="Teacher" asp-action="ViewTeacherTask" asp-route-id="@ViewBag.SubjectId">
                            Μενού Ασκήσεων
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mx-3" asp-controller="Teacher" asp-action="ViewOtherCourses">
                            Μενού άλλων Μαθημάτων
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mx-3" style="color: red;" asp-controller="Home" asp-action="SignOut">
                            <strong>Αποσύνδεση</strong>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <h1 class="text-center" style="text-align: center; margin-top: 10%;"> Δημιουργία Άσκησης </h1>

    <form method="post" asp-controller="Teacher" asp-action="CreateTask" style="margin: 5% 35% 2% 35%; background: rgba(255,255,255,0.7); border-radius: 15px; backdrop-filter: blur(10px);">
        <h3 style="text-align: center; padding: 8px;"> Παρακαλώ εισάγετε μια Νέα Άσκηση </h3>
        <div class="mb-3" style="padding: 20px;">
            <label class="form-label">Τίτλος</label>
            <input class="form-control" name="title" type="text" maxlength="45">
        </div>
        <div class="mb-3" style="padding: 20px;">
            <label class="form-label">Ομαδική</label>
            <input name="group_type" type="checkbox" value="true">
        </div>
        <input type="hidden" name="subjectId" value="@ViewBag.SubjectId" readonly />
        <div class="mb-3" style="padding: 20px;">
            <button type="submit" class="btn btn-primary">Προσθήκη</button>
        </div>

    </form>
</body>