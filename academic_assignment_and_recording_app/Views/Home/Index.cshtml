@{
    ViewData["Title"] = "Home Page";
}


<body style="background-image: url('https://images.pexels.com/photos/29586677/pexels-photo-29586677/free-photo-of-elegant-flow-of-soft-blue-fabric-in-abstract-form.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2'); background-attachment: fixed; background-size: cover;">


    <h1 style="text-align: center; margin-top: 10%;"> Καλωσήρθατε </h1>

    <form method="post" asp-controller="Home" asp-action="LogIn" style="margin: 5% 35% 2% 35%; background: rgba(255,255,255,0.7); border-radius: 15px; backdrop-filter: blur(10px);">
        <h3 style="text-align: center; padding: 8px;"> Login </h3>
        <div class="mb-3" style="padding: 20px;">
            <label class="form-label">Username</label>
            <input class="form-control" name="email" type="text" maxlength="45">
        </div>
        <div class="mb-3" style="padding: 20px;">
            <label class="form-label">Password</label>
            <input class="form-control" name="password" type="password">
        </div>
        <div class="mb-3" style="padding: 20px;">
            <button type="submit" class="btn btn-primary">Σύνδεση</button>
        </div>

    </form>



<div class="text-center">
</div>
</body>
